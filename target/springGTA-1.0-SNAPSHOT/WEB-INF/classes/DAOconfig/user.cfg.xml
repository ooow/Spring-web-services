<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Model.User" table="users">
        <id name="id" column="id" type="long">
            <generator class="native"/>
        </id>
        <property name="login" column="login" type="string"/>
        <property name="password" column="password" type="string"/>
        <property name="name" column="name" type="string"/>
        <property name="surname" column="surname" type="string"/>
        <property name="postID" column="post_id" type="long"/>
        <many-to-one name="role" class="Model.Role">
            <column name="role_id"/>
        </many-to-one>

        <!--one-to-one example-->
        <!--<one-to-one name="role" class="Model.Role"/>-->

        <!--many-to-many example-->
        <!--<set name="roles" table="user_role_connect">
            <key column="role_id"/>
            <many-to-many column="user_id" class="Model.User"/>
        </set>-->

    </class>
</hibernate-mapping>